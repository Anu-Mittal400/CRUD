{
  "expo": {
    "name": "CRUD",
    "slug": "CRUD",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "crud",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.rahul.sharma1999.CRUD"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "react-native-edge-to-edge",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow this to access the mic",
          "speechRecognitionPermission": "Allow this to recognize speech",
          "androidSpeechServicePackages": [
            "com.google.android.googlequicksearchbox"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
      }
    },
    "ios": {
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Allow this to recognize speech",
        "NSMicrophoneUsageDescription": "Allow this to access the mic"
      },
      "bundleIdentifier": "com.rahul.sharma1999.CRUD"
    }
  }
}
